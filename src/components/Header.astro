---
import { SOCIALS } from "../data/socials";
import Component from '../components/Component.astro';
import ArrowRight from "./icons/chevonRight.astro";
---

<header class="sticky-left-header">
    <div>
        <h1 class="text-4xl font-bold tracking-tight text-slate-200 sm:text-5xl">Henry D</h1>
        <h2 class="mt-3 text-lg tracking-tight text-slate-200 sm:text-xl">
            <span id="typing"></span>
            <span id="typingCursor"></span>
        </h2>
        <script src="../scripts/typing-effect.js"></script>
        <nav>
            <ul class="nav-list">
                <li>
                    <a href="/">
                        <div class="text-script-logo">
                            <span class="text-script-logo-mark">&gt;</span>
                            <span class="text-script-logo-text"># cd ~/</span>
                            <span class="text-script-logo-cursor"></span>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#about" class="group flex items-center py-1 hover:text-orange-200">
                        <span class="inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">
                            <ArrowRight />
                        </span>
                        <span class="text-xs font-bold uppercase -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">about</span>
                    </a>
                </li>
                <li>
                    <a href="#experience" class="group flex items-center py-1 hover:text-orange-200">
                        <span class="inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">
                            <ArrowRight />
                        </span>
                        <span class="text-xs font-bold uppercase -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">experience</span>
                    </a>
                </li>
                <li>
                    <a href="#projects" class="group flex items-center py-1 hover:text-orange-200">
                        <span class="inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">
                            <ArrowRight />
                        </span>
                        <span class="text-xs font-bold uppercase -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none">projects</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    {
        SOCIALS.length && (
            <ul
            class="ml-1 mt-8 flex items-center"
            aria-label="Social media"
            >
            {SOCIALS.map((social) => (
                <li class="mr-5 shrink-0 text-xs">
                    <a
                        class="block h-6 w-6 hover:text-orange-200"
                        href={social.url}
                        target="_blank"
                        rel="noreferrer noopener"
                        aria-label={`${social.name} (opens in a new tab)`}
                    >
                        <span class="sr-only">{social.name}</span>
                        <Component component={social.icon} />
                    </a>
                </li>
            ))}
            </ul>
        )
    }
</header>